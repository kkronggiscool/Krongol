<!-- views/create-query.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Query - Krongol</title>
    <link rel="stylesheet" href="/create-query.css">
    <link rel="icon" type="image/png" href="/logo.png">
</head>
<body>
    <!-- Logo at Top Right -->
    <div class="logo-container">
        <img src="/logo.png" alt="Krongol Logo" class="logo-icon">
    </div>

    <!-- Settings Button -->
    <div class="settings-container">
        <button id="settings-btn" class="settings-btn">⚙️</button>
    </div>

    <div class="container">
        <h1>Create a Query</h1>
        <form action="/create-a-query" method="post" class="query-form">
            <div class="form-group">
                <label for="queryName">Query Name</label>
                <input type="text" id="queryName" name="queryName" required>
            </div>
            <div class="form-group">
                <label for="queryURL">Query URL</label>
                <input type="url" id="queryURL" name="queryURL" required>
            </div>
            <div class="form-group">
                <label for="queryDescription">Query Description (optional)</label>
                <textarea id="queryDescription" name="queryDescription"></textarea>
            </div>
            <button type="submit" class="create-query-btn">Create Query</button>
        </form>
    </div>

    <!-- Modal Structure -->
    <div id="settings-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>Settings</h2>
            <label class="toggle-container">
                Dark Mode
                <div class="toggle-switch">
                    <input type="checkbox" id="dark-mode-toggle" class="toggle-input">
                    <span class="slider"></span>
                </div>
            </label>
        </div>
    </div>

    <script src="/script.js"></script>
</body>
</html>
