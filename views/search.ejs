<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= query %> - Krongol</title>
    <link rel="stylesheet" href="/search.css">
    <link rel="icon" type="image/png" href="/logo.png">
</head>
<body>
    <!-- Logo and Settings -->
    <div class="header">
        <img src="/logo.png" alt="Krongol Logo" class="logo-icon">
        <form action="/search" method="get" class="search-form">
            <input type="text" name="query" class="search-box" placeholder="Search" value="<%= query %>">
        </form>
        <button id="settings-btn" class="settings-btn">⚙️</button>
    </div>

    <!-- Modal Structure -->
    <div id="settings-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>Settings</h2>
            <label class="toggle-container">
                Dark Mode
                <div class="toggle-switch">
                    <input type="checkbox" id="dark-mode-toggle" class="toggle-input">
                    <span class="slider"></span>
                </div>
            </label>
        </div>
    </div>

    <!-- Search Results -->
    <div class="container">
        <h1>Search Results</h1>
        <div class="results">
            <% if (results.length > 0) { %>
                <% results.forEach(result => { %>
                    <div class="result-item">
                        <h2 class="result-title"><a href="<%= result.url %>"><%= result.name %></a></h2>
                        <p class="result-url"><%= result.url %></p>
                        <p class="result-description"><%= result.description %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No results found for "<%= query %>"</p>
            <% } %>
        </div>
    </div>

    <script src="/script.js"></script>
</body>
</html>
